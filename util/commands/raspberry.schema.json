{
    "$id": "https://kulturkrock.se/commands/raspberry.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Raspberry commands in Opus",
    "description": "A raspberry command in an Opus to use for Screencrash",
    "type": "object",
    "oneOf": [
        {
            "title": "On",
            "description": "Turn on LED",
            "properties": {
                "target": { "const": "raspberry" },
                "cmd": { "const": "on" },
                "desc": {
                    "title": "Description",
                    "description": "Description of what this action does",
                    "type": "string"
                }
            },
            "required": ["target", "cmd"],
            "additionalProperties": false
        },
        {
            "title": "Off",
            "description": "Turn off LED",
            "properties": {
                "target": { "const": "raspberry" },
                "cmd": { "const": "off" },
                "desc": {
                    "title": "Description",
                    "description": "Description of what this action does",
                    "type": "string"
                }
            },
            "required": ["target", "cmd"],
            "additionalProperties": false
        }
    ]
}